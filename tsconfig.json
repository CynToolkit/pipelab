{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@@/*": [
        "./src/shared/*"
      ],
      "@main/*": [
        "./src/main/*"
      ],
      "@renderer/*": [
        "./src/renderer/*"
      ],
      "@pipelab/*": [
        "./src/shared/libs/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "out",
  ]
}
